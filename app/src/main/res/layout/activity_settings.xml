<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    tools:context=".settings"
    >


    <ImageView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_marginTop="-90dp"
        android:background="@drawable/roundcorner3" />


    <ImageButton
        android:id="@+id/back"
        android:layout_width="102dp"
        android:layout_height="85dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backswing2"
        android:padding="10dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/back"
        android:background="@drawable/settinghead"
        android:scaleType="centerInside"
         />

    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="437dp"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundcorner3">

        <ImageView
            android:id="@+id/sounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sc" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="392dp"
            android:layout_height="65dp"
            android:layout_below="@id/sounds"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mute"
            android:layout_width="157dp"
            android:layout_height="70dp"
            android:layout_below="@id/seekBar"
            app:srcCompat="@drawable/mute" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchmute"
            android:layout_width="61dp"
            android:layout_height="68dp"
            android:layout_below="@id/seekBar"
            android:layout_toRightOf="@id/mute" />

    </RelativeLayout>


</RelativeLayout>