<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivheader"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_bg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/congrats" />

    <ImageButton
        android:id="@+id/Green_BT"
        android:layout_width="77dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/ivheader"
        android:layout_marginStart="28dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/Red_BT"
        android:background="@drawable/new_game" />

    <ImageButton
        android:id="@+id/Red_BT"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_alignStart="@+id/ivheader"
        android:layout_marginStart="60dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/arrow"
        android:scaleType="center" />

</RelativeLayout>