<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView

        android:layout_width="311dp"
        android:layout_height="194dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundcorner3" />

    <ImageView
        android:id="@+id/ivheader"
        android:layout_width="288dp"
        android:layout_height="176dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundcorner" />

    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:layout_alignStart="@+id/ivheader"
        android:layout_alignEnd="@+id/ivheader"
        android:layout_marginTop="90dp"
        android:background="@drawable/congrats" />

    <ImageButton
        android:id="@+id/restart"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/ivheader"
        android:layout_marginStart="38dp"
        android:layout_below="@id/head"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/exit"
        android:background="@drawable/new_game" />

    <ImageButton
        android:id="@+id/exit"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/ivheader"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/head"
        android:background="@drawable/arrow"
        android:scaleType="center" />

</RelativeLayout>