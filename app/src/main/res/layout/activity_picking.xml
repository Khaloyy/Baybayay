<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:verticalScrollbarPosition="right"
    tools:context=".PilianActivity">

    <ImageView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-90dp"
        android:background="@drawable/roundcorner2"
        android:elevation="10dp" />


    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="78dp"
        android:layout_height="69dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/undo"
        android:elevation="10dp"
        android:padding="10dp" />


    <ImageView
        android:layout_width="168dp"
        android:layout_height="74dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/backbutton"
        android:background="@drawable/roundcorner4"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/home" />

    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="630dp"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundcorner2"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/fun"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/sv2"
            android:background="@drawable/laro2"
            android:elevation="10dp"
            android:padding="5dp"
            android:transitionName="transition_laro" />

        <ImageView
            android:id="@+id/funbaybay"
            android:layout_width="97dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_below="@id/sv2"
            android:background="@drawable/larobaybay"
            android:elevation="10dp"
            android:padding="5dp"
            android:transitionName="transition_laro" />

        <HorizontalScrollView
            android:id="@+id/sv"
            android:layout_width="356dp"
            android:layout_height="149dp"
            android:layout_below="@+id/funbaybay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/roundcorner2"
            android:elevation="10dp"
            android:scrollbarThumbHorizontal="@drawable/custom_scroll_style"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">


                <ImageButton
                    android:id="@+id/matching"
                    android:layout_width="294dp"
                    android:layout_height="99dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/roundcorner3"
                    android:elevation="10dp" />


                <ImageView
                    android:id="@+id/title1"
                    android:layout_width="267dp"
                    android:layout_height="79dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tugma1"
                    android:elevation="15dp" />


                <ImageButton
                    android:id="@+id/quiz"
                    android:layout_width="294dp"
                    android:layout_height="99dp"
                    android:layout_toRightOf="@id/matching"
                    android:background="@drawable/roundcorner3"
                    android:elevation="10dp" />


                <ImageView
                    android:id="@+id/title2"
                    android:layout_width="267dp"
                    android:layout_height="79dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/matching"
                    android:background="@drawable/sulit1"
                    android:elevation="15dp" />

            </RelativeLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/module"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/modyul2"
            android:elevation="10dp"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/modyulbaybay"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/modyulbaybay"
            android:elevation="10dp"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <ScrollView
            android:id="@+id/sv2"
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:layout_below="@+id/modyulbaybay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/roundcorner2"
            android:elevation="10dp"
            android:verticalScrollbarPosition="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/translate"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/roundcorner3"
                    android:elevation="10dp"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/title3"
                    android:layout_width="267dp"
                    android:layout_height="79dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/salin1"
                    android:elevation="15dp" />

                <ImageButton
                    android:id="@+id/pagbasa"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/translate"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/roundcorner3"
                    android:elevation="10dp"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/title4"
                    android:layout_width="223dp"
                    android:layout_height="76dp"
                    android:layout_below="@id/translate"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/basa1"
                    android:elevation="15dp" />

                <ImageButton
                    android:id="@+id/pagsulat"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/pagbasa"
                    android:background="@drawable/roundcorner3"
                    android:elevation="10dp"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/title5"
                    android:layout_width="215dp"
                    android:layout_height="78dp"
                    android:layout_below="@id/pagbasa"

                    android:layout_marginTop="8dp"
                    android:background="@drawable/sulat1"
                    android:elevation="15dp" />
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>