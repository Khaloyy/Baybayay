<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    tools:context=".PilianActivity">

    <ImageView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_marginTop="-90dp"
        android:background="@drawable/roundcorner3" />


    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="78dp"
        android:layout_height="69dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/undo"
        android:padding="10dp" />


    <ImageView
        android:layout_width="168dp"
        android:layout_height="74dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/backbutton"
        android:background="@drawable/roundcorner"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:layout_below="@+id/head"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundcorner3">

        <ImageView
            android:id="@+id/fun"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/laro2"
            android:padding="5dp"
            android:transitionName="transition_laro" />

        <ImageView
            android:id="@+id/funbaybay"
            android:layout_width="97dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/larobaybay"
            android:padding="5dp"
            android:transitionName="transition_laro" />

        <HorizontalScrollView
            android:id="@+id/sv"
            android:layout_width="356dp"
            android:layout_height="149dp"
            android:layout_below="@+id/funbaybay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/roundcorner"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageButton
                    android:id="@+id/matching"
                    android:layout_width="274dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/pagtutugma" />

                <ImageButton
                    android:id="@+id/quiz"
                    android:layout_width="274dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/pagsusulit" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/module"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:layout_below="@id/sv"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/modyul2"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/modyulbaybay"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_below="@id/sv"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/modyulbaybay"
            android:padding="10dp"
            android:scaleType="fitCenter" />

        <ScrollView
            android:id="@+id/sv2"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@+id/modyulbaybay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/roundcorner"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/translate"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/pagsasalin"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/pagbasa"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/pagbasa"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/pagsulat"
                    android:layout_width="293dp"
                    android:layout_height="90dp"
                    android:background="@drawable/pagsusulat"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>